#alias {^show %s%S %s%w$}
{
#format {tmp} {%u} {%4};
#if {&{MSDP.${tmp}}}
{
#variable {msg} {I have ${MSDP.${tmp}} %4};
#if {&{MSDP.${tmp}_PERM}}
{
#variable {msg} {${msg} of ${MSDP.${tmp}_PERM}}
};
#elseif {&{MSDP.${tmp}_MAX}}
{
#variable {msg} {${msg} of ${MSDP.${tmp}_MAX}}
};
};
#else
{
#variable {msg} {Nothing to show}
};
#variable {msg} {${msg}\.};
#if {"${msg}" != "Nothing to show%*"}
{
%2 ${msg}
};
#else
{
#echo {${msg}}
}
}
