#alias {^PLAYER_CONDITION$}
{
#if {&{name}}
{
#math {playerCondition.currentBlood} {(${MSDP.BLOOD} / ${MSDP.BLOOD_MAX}) * 100.0};
#math {playerCondition.currentHealth} {(${MSDP.HEALTH} / ${MSDP.HEALTH_MAX}) * 100.0};
#math {playerCondition.currentMana} {(${MSDP.MANA} / ${MSDP.MANA_MAX}) * 100.0};
#math {playerCondition.currentMovement} {(${MSDP.MOVEMENT} / ${MSDP.MOVEMENT_MAX}) * 100.0};
#if {${playerCondition.currentHealth} == 100}
{
#variable {playerCondition.currentHealth} {healthy};
#variable {playerCondition.oldHealth} {healthy}
};
#elseif {${playerCondition.currentHealth} >= 85}
{
#variable {playerCondition.currentHealth} {bruised}
};
#elseif {${playerCondition.currentHealth} >= 70}
{
#variable {playerCondition.currentHealth} {hurt}
};
#elseif {${playerCondition.currentHealth} >= 55}
{
#variable {playerCondition.currentHealth} {injured}
};
#elseif {${playerCondition.currentHealth} >= 40}
{
#variable {playerCondition.currentHealth} {wounded}
};
#elseif {${playerCondition.currentHealth} >= 25}
{
#variable {playerCondition.currentHealth} {mauled}
};
#elseif {${playerCondition.currentHealth} <= 10}
{
#variable {playerCondition.currentHealth} {crippled}
};
#if {"${playerCondition.oldHealth}" != "${playerCondition.currentHealth}"}
{
#echo {Your condition: $playerCondition.currentHealth};
#variable {playerCondition.oldHealth} {${playerCondition.currentHealth}};
#if {"$audioprompt" == "true"}
{
synth_play ${playerCondition.currentHealth}
}
};
#if {${playerCondition.currentMana} == 100}
{
#variable {playerCondition.currentMana} {full};
#variable {playerCondition.oldMana} {full}
};
#elseif {${playerCondition.currentMana} >= 75}
{
#variable {playerCondition.currentMana} {lots of mana}
};
#elseif {${playerCondition.currentMana} >= 50}
{
#variable {playerCondition.currentMana} {half mana}
};
#elseif {${playerCondition.currentMana} <= 15}
{
#variable {playerCondition.currentMana} {low mana}
};
#if {"${playerCondition.oldMana}" != "${playerCondition.currentMana}"}
{
#echo {Your mana: $playerCondition.currentMana};
#variable {playerCondition.oldMana} {${playerCondition.currentMana}};
#if {"$audioprompt" == "true"}
{
synth_play ${playerCondition.currentMana}
}
};
#if {${playerCondition.currentMovement} <= 90}
{
#variable {playerCondition.currentMovement} {full};
#variable {playerCondition.oldMovement} {full}
};
#elseif {${playerCondition.currentMovement} >= 75}
{
#variable {playerCondition.currentMovement} {going strong}
};
#elseif {${playerCondition.currentMovement} >= 50}
{
#variable {playerCondition.currentMovement} {tiring}
};
#elseif {${playerCondition.currentMovement} <= 15}
{
#variable {playerCondition.currentMovement} {exhausted}
};
#if {"${playerCondition.oldMovement}" != "${playerCondition.currentMovement}"}
{
#echo {Your movement: $playerCondition.currentMovement};
#variable {playerCondition.oldMovement} {${playerCondition.currentMovement}};
#if {"$audioprompt" == "true"}
{
synth_play ${playerCondition.currentMovement}
}
};
}
}
{9}

