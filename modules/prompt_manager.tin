#alias {^{noaudio|audio}prompt$}
{
#if {"%0" == "audioprompt"}
{
#variable {audioprompt} {true};
#unsplit;
#showme {Audio prompt enabled.}
};
#else
{
#unvariable {audioprompt};
#split;
#showme {Audio prompt disabled.}
}
}
