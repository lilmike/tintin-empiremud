#FUNCTION {do_hook}
{
	#nop {Note: Hook names cannot have the semicolon character in them.};
	#list {hook[%1]} {size} {i};
	#if {$i > 0}
	{
		#regexp {%0} {{[^;]+};%*} {#var {hookArgs} {&2}};
		#else
		{
			#variable {hookArgs} {}
		};
		#local {i} {};
		#foreach {${hook[%1][]}} {i}
		{
			@${hook[%1][$i]}{${hookArgs}}
		};
		#unvariable {hookArgs}
	};
	#return #nop
}

